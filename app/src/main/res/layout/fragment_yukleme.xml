<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.YuklemeFragment"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Banner -->
    <LinearLayout
        android:id="@+id/bannerLayout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:translationZ="6dp"
        android:outlineProvider="background"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“· FotoÄŸraf YÃ¼kle"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- GÃ¶rsel seÃ§me alanÄ± -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/ic_menu_camera"
        android:scaleType="centerInside"
        android:background="@android:color/darker_gray"
        android:padding="16dp"
        android:contentDescription="Resim seÃ§"
        android:elevation="4dp"
        android:outlineProvider="background"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/bannerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Yorum alanÄ± -->
    <EditText
        android:id="@+id/commentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Yorumunuzu giriniz"
        android:inputType="text"
        android:padding="14dp"
        android:backgroundTint="@android:color/darker_gray"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- YÃ¼kle butonu -->
    <Button
        android:id="@+id/yukleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="YÃ¼kle"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:elevation="6dp"
        android:translationZ="6dp"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/commentText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/bottomBanner"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ana MenÃ¼ Butonu -->
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:contentDescription="Ana MenÃ¼"
            app:tint="@android:color/white" />

        <!-- Spacer (BoÅŸluk) -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Orta Buton (ArtÄ±k ImageButton) -->
        <ImageButton
            android:id="@+id/floatingActionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Yeni gÃ¶nderi ekle"
            app:tint="@android:color/white" />

        <!-- Spacer (BoÅŸluk) -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Profil Butonu -->
        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:contentDescription="Profil"
            app:tint="@android:color/white" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
