<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Kullanıcı Bilgisi -->
        <LinearLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Profil resmi (placeholder) -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:contentDescription="profil resmi"
                android:layout_marginEnd="8dp"
                android:clipToOutline="true" />

            <!-- Email -->
            <TextView
                android:id="@+id/recyclerEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kullanıcı emaili"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Kullanıcı Fotoğrafı -->
        <ImageView
            android:id="@+id/recyclerImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="kullanıcı fotoğrafı"
            android:layout_marginTop="12dp"
            android:background="@android:color/darker_gray"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/userInfoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Kullanıcı Yorumu -->
        <TextView
            android:id="@+id/recyclerCommentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="kullanıcı yorumu buraya gelecek"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
